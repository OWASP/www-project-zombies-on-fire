# OWASP Zombies on Fire - Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database
# SQLite (default - good for development)
DATABASE_URL=sqlite:///./tabletop.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/zombies_on_fire

# LLM Provider Configuration
# Options: openai, anthropic, mock
LLM_PROVIDER=mock

# OpenAI (if using openai provider)
OPENAI_API_KEY=your-openai-api-key
LLM_MODEL=gpt-4

# Anthropic (if using anthropic provider)
ANTHROPIC_API_KEY=your-anthropic-api-key
# LLM_MODEL=claude-3-sonnet-20240229

# File Storage
UPLOAD_DIR=./uploads
PDF_OUTPUT_DIR=./generated_pdfs
